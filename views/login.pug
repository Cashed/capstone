extends layout

block content
  div.container(ng-cloak)
    div.row.auth-container
      img.bird(src='images/bird.png')
      div.form-container.col-md-4.col-md-offset-4
        h2 Login
        if error
          div.alert.alert-danger #{error}
        if success
          div.alert.alert-success #{success}

        form(action='/login' name='submitForm' method='post')
          div.form-group
            label(for='username') Username
            input.form-control(type='text' name='username' id='username' value= username || "" required='')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' name='password' id='password' required)
          div.form-group
            button.btn.btn-primary(type='submit') Login
            a.btn.center-block.create-btn(href="/register" type="button") Create Account
